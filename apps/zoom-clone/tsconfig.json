{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  // to use 'webpack.config.ts'
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // exclude from compilation
  "exclude": ["node_modules", "dist", "build"]
}
